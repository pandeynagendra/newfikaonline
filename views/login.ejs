<%- include('./navbar.ejs') %>

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>FIKA | Sign In</title>

  <link rel="icon" href="/images/logo.png" sizes="32x32" />
  <link rel="stylesheet" href="/theme/assets/css/theme.min.css" />
  <link rel="stylesheet" href="/theme/assets/icons/cartzilla-icons.min.css" />

  <style>
    body {
      background: linear-gradient(135deg, #f8fafc 0%, #e0f0ff 100%);
      font-family: 'Inter', sans-serif;
    }

    /* ---------- LAYOUT ---------- */
    main.content-wrapper {
      min-height: calc(100vh - 80px);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .login-container {
      display: flex;
      width: 100%;
      max-width: 1100px;
      gap: 40px;
      align-items: center;
      justify-content: center;
    }

    /* ---------- LOGIN CARD ---------- */
    .login-card {
      background: #fff;
      border-radius: 14px;
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
      padding: 40px 35px;
      max-width: 420px;
      width: 100%;
    }

    .login-card h1 {
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 10px;
    }

    .login-card p.nav {
      font-size: 0.9rem;
      color: #6b7280;
      margin-bottom: 25px;
    }

    .login-card p.nav a {
      color: #3b82f6;
      font-weight: 500;
      text-decoration: none;
    }

    .login-card input.form-control {
      border-radius: 10px;
      padding: 14px;
    }

    .forgot-link {
      text-decoration: none;
      font-size: 0.85rem;
    }

    .btn-primary {
      background: linear-gradient(90deg, #f55266, #ff6b81);
      border: none;
      border-radius: 10px;
      padding: 12px;
      font-weight: 600;
    }

    .btn-primary:hover {
      background: linear-gradient(90deg, #ff6b81, #f55266);
      box-shadow: 0 10px 25px rgba(245, 82, 102, 0.3);
    }

    .error-msg {
      color: #f03d3d;
      font-weight: 600;
      margin-bottom: 15px;
    }

    footer p {
      text-align: center;
      font-size: 0.8rem;
      color: #9ca3af;
      margin-top: 25px;
    }

    /* ---------- SIDE IMAGE ---------- */
    .cover-image {
      flex: 1;
      height: 460px;
      background: url('/theme/assets/img/account/cover.png') center/cover no-repeat;
      border-radius: 14px;
      display: none;
    }

    /* ---------- RESPONSIVE ---------- */
    @media (min-width: 992px) {
      .cover-image {
        display: block;
      }
    }
  </style>
</head>

<body>

  <main class="content-wrapper">
    <div class="login-container">

      <!-- LOGIN CARD -->
      <div class="login-card">
        <h1>Welcome Back</h1>
        <p class="nav">
          Don't have an account?
          <a href="/signup">Signup</a>
        </p>

        <% if (msg) { %>
          <p class="error-msg"><%= msg %></p>
        <% } %>

        <form method="post" action="/login1">
          <div class="mb-3">
            <input type="email" name="email" class="form-control" placeholder="Email" required />
          </div>

          <div class="mb-3">
            <input type="password" name="password" class="form-control" placeholder="Password" required />
          </div>

          <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="remember" />
              <label for="remember" class="form-check-label">Remember me</label>
            </div>

            <a href="/login/forgot" class="text-primary forgot-link">
              Forgot password?
            </a>
          </div>

          <button type="submit" class="btn btn-primary w-100">
            Sign In
          </button>
        </form>

        <footer>
          <p>Â© All rights reserved. Made by
            <a href="https://fikaonline.in/" target="_blank">FIKA</a>
          </p>
        </footer>
      </div>

      <!-- IMAGE -->
      <div class="cover-image"></div>

    </div>
  </main>

  <script src="/theme/assets/js/theme.min.js"></script>
</body>

</html>
